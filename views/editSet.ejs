<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Set</title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    <div class="max-w-lg mx-auto my-10 p-8 bg-white rounded-lg shadow-lg">
      <!-- Home Button -->
      <div class="mb-6 text-center">
        <a href="/" class="btn btn-secondary">Home</a>
      </div>

      <h1 class="text-2xl font-bold mb-6 text-center text-gray-700">
        Edit Lego Set - <%= set.name %>
      </h1>

      <form action="/lego/editSet" method="POST" class="space-y-4">
        <!-- Hidden field to store set_num (since it's the unique identifier and shouldn't be edited) -->
        <input type="hidden" name="set_num" value="<%= set.set_num %>" />

        <div class="form-control">
          <label class="label">
            <span class="label-text text-gray-700">Name</span>
          </label>
          <input
            type="text"
            name="name"
            class="input input-bordered w-full"
            value="<%= set.name %>"
            required
          />
        </div>

        <div class="form-control">
          <label class="label">
            <span class="label-text text-gray-700">Year</span>
          </label>
          <input
            type="number"
            name="year"
            class="input input-bordered w-full"
            value="<%= set.year %>"
            required
          />
        </div>

        <div class="form-control">
          <label class="label">
            <span class="label-text text-gray-700">Number of Parts</span>
          </label>
          <input
            type="number"
            name="num_parts"
            class="input input-bordered w-full"
            value="<%= set.num_parts %>"
            required
          />
        </div>

        <div class="form-control">
          <label class="label">
            <span class="label-text text-gray-700">Image URL</span>
          </label>
          <input
            type="url"
            name="img_url"
            class="input input-bordered w-full"
            value="<%= set.img_url %>"
            required
          />
        </div>

        <div class="form-control">
          <label class="label">
            <span class="label-text text-gray-700">Theme</span>
          </label>
          <select name="theme_id" class="select select-bordered w-full" required>
            <% themes.forEach(theme => { %>
              <option value="<%= theme.id %>" <%= set.theme_id === theme.id ? 'selected' : '' %>>
                <%= theme.name %>
              </option>
            <% }) %>
          </select>
        </div>

        <!-- Update Button -->
        <button type="submit" class="btn btn-primary w-full mt-4">Update Set</button>

        <!-- Delete Button -->
        <a
          href="/lego/deleteSet/<%= set.set_num %>"
          class="btn btn-error w-full mt-4 text-white bg-red-500 hover:bg-red-700 font-semibold py-2 px-4 rounded"
          onclick="return confirm('Are you sure you want to delete this set?');"
        >
          Delete Set
        </a>
      </form>
    </div>
  </body>
</html>
